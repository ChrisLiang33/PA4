<h1> Transaction for <%= user.username %></h1>
<div class="row">
    <div class="col">
        <p> Here is your list things to do! </p>
        <a class="btn btn-lg btn-primary" href="/transaction/groupby">group by category</a>
        <a class="btn btn-lg btn-primary" href="?sortBy=category">sort by category</a>
        <a class="btn btn-lg btn-primary" href="?sortBy=date">sort by date</a>
        <a class="btn btn-lg btn-primary" href="?sortBy=amount">sort by amount</a>
        <a class="btn btn-lg btn-primary" href="?sortBy=description">sort by description</a>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Date</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item=> { %>
                    <tr>
                        <td>
                            <%= item.Description %>
                        </td>
                        <td>
                            <%= item.Amount %>
                        </td>
                        <td>
                            <%= item.Category %>
                        </td>
                        <td>
                            <%= item.Date.toDateString() %>
                        </td>
                        <td>
                            <a href="transaction/remove/<%= item._id %>">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                        <td>
                            <a href="transaction/transactionedit/<%= item._id %>">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
    
    <h2> Add a New Transaction </h2>
    <form method="post" action="transaction">
        <input type="text" name="description" placeholder="description">
        <br>
        <input type="text" name="category" placeholder="category">
        <br>
        <input type="number" name="amount" placeholder="amount">
        <br>
        <input type="date" name="date" placeholder="mm/dd/yyyy">
        <br>
        <input type="submit" value="store">
    </form>
</div>

